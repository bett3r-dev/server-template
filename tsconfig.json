{
  "compilerOptions": {
    "allowJs": true,
		"alwaysStrict": false,
		"baseUrl": ".",
		"checkJs": false,
		"declarationMap": true,
		"noImplicitAny": false,
		"outDir": "./build",
		"rootDir": "./src",
		"strict": false,
		"strictBindCallApply": false,
		"strictFunctionTypes": false,
		"strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitThis": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    // This one is important so jsonschema-definer works with optionals
    "strictNullChecks": true,
    "target": "ES2020",
	},
	"ts-node": {
		"transpileOnly": true,
		"ignore": [
			"(?:^|/)node_modules/",
      "build"
		]
	},
	"include": [
		"src"
  ],
}
